      "@citadel/book-details": ["libs/books/feature/book-details/src/index.ts"],
      "@citadel/book-list": ["libs/books/feature/book-list/src/index.ts"],
      "@citadel/books/data-access": ["libs/books/data-access/src/index.ts"],
